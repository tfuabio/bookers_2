<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <div class="form-item">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-item">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="form-item">
    <%= f.submit ' Update Book ' %>
  </div>
<% end %>